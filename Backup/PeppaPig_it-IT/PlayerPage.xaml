            <my:AdControl Visibility="Collapsed" Grid.Column="0" Name="adControlPubCenter"  IsAutoRefreshEnabled="True" Margin="-200,0,-200,0" Width="480" Height="80"   RenderTransformOrigin="0.5,0.5" >
                <my:AdControl.RenderTransform>
                    <CompositeTransform Rotation="270"/>
                </my:AdControl.RenderTransform>
